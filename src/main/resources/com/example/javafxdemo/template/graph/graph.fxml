<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.javafxdemo.controller.GraphController"
            minHeight="0.0"
            minWidth="0.0"
            prefHeight="180.0"
            prefWidth="200.0">
    <ScrollPane fx:id="graphPlaygroundScrollPane" layoutX="14.0" layoutY="14.0" prefHeight="450.0" prefWidth="465.0">
        <Pane fx:id="graphPlaygroundPane" prefHeight="450.0" prefWidth="465.0"/>
    </ScrollPane>
    <Accordion layoutX="489.0" layoutY="14.0" prefHeight="407.0" prefWidth="151.0">
        <panes>
            <TitledPane animated="false" text="Algorithm Settings">
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <TextArea fx:id="graphDragAndDropTextArea" editable="false" focusTraversable="false"
                              layoutX="11.0" layoutY="14.0" prefHeight="96.0" prefWidth="127.0"
                              text="Click or Drag and Drop file here ... " wrapText="true"/>
                    <CheckBox fx:id="graphFindPathCheckBox" layoutX="11.0" layoutY="160.0"
                              mnemonicParsing="false" text="Find Path?"/>
                    <CheckBox fx:id="graphUseBlockedNodesCheckBox" layoutX="9.0" layoutY="252.0"
                              mnemonicParsing="false" text="Use blocked Nodes?"/>
                    <Label layoutX="4.0" layoutY="184.0" text="From: "/>
                    <Label layoutX="11.0" layoutY="211.0" text="To: "/>
                    <TextField fx:id="graphFromNodeTextArea" editable="false" layoutX="43.0" layoutY="179.0"
                               prefHeight="26.0" prefWidth="90.0" promptText="Ctrl+Left Mouse" text="null">
                        <font>
                            <Font size="10.0"/>
                        </font>
                    </TextField>
                    <TextField fx:id="graphToNodeTextArea" editable="false" layoutX="43.0" layoutY="206.0"
                               prefHeight="26.0" prefWidth="90.0" promptText="Ctrl+Right Mouse" text="null">
                        <font>
                            <Font size="10.0"/>
                        </font>
                    </TextField>
                    <TextField fx:id="graphBlockedNodesTextArea" editable="false" layoutX="43.0" layoutY="270.0"
                               prefHeight="26.0" prefWidth="90.0" promptText="Shift+Left Mouse" text="null">
                        <font>
                            <Font size="10.0"/>
                        </font>
                    </TextField>
                </AnchorPane>
            </TitledPane>
            <TitledPane animated="false" text="Animation Settings">
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
            </TitledPane>
        </panes>
    </Accordion>
    <Button fx:id="graphBFSButton" layoutX="486.0" layoutY="432.0" mnemonicParsing="false"
            onAction="#onGraphBFSPlayButtonAction" prefHeight="26.0" prefWidth="153.0" text="Play"/>
</AnchorPane>
